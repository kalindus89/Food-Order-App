<resources>
    <style name="Widget.Theme.FoodOrderApp.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.FoodOrderApp.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
    
    <style name="CollapseAppBar" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">24sp</item>
        <item name="android:color">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ExpandedAppBar" parent="TextAppearance.AppCompat.Medium">
        <item name="android:color">@color/purple_500</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>